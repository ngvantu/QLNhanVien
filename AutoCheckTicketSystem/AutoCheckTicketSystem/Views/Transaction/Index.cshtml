@using AutoCheckTicketSystem.Models.Metadata;
@model List<Transaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/AdminLayout.cshtml";
}

<div id="content" class="span10">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="index.html">Home</a>
            <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Customer</a></li>
    </ul>
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header" data-original-title>
                <h2><i class="halflings-icon user"></i><span class="break"></span>Lịch sử bán vé</h2>
                <div class="box-icon">
                    <a href="/Customer/Create"><i class="halflings-icon plus"></i></a>
                    <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                    <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable datatable">
                    <thead>
                        <tr>
                            <th>Mã vé</th>
                            <th>Thời gian bán</th>
                            <th>Hạn sử dụng</th>
                            <th>Tình trạng</th>
                            <th>Loại</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.TransID">
                                <td>@item.TransID</td>

                                <td class="center">@item.From</td>
                                <td class="center">@item.To</td>
                                

                                <td>
                                    @if (@item.IsUsed == true)
                                    {
                                        <label>Chưa sử dụng</label>
                                    }
                                    else
                                    {
                                        <label>Đã sử dụng</label>
                                    }
                                </td>
                                
                                <td class="center">@item.typeTicket.TypeName</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div><!--/span-->

    </div><!--/row-->
</div><!--/.fluid-container-->
